<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wusi.reimbursement.mapper.SellLogMapper">
    <resultMap id="BaseResultMap" type="com.wusi.reimbursement.entity.SellLog">
            <id column="id" property="id" jdbcType="BIGINT"/>
            <result column="product" property="product" jdbcType="VARCHAR"/>
            <result column="buyer_name" property="buyerName" jdbcType="VARCHAR"/>
            <result column="my_order_no" property="myOrderNo" jdbcType="VARCHAR"/>
            <result column="sell_money" property="sellMoney" jdbcType="INTEGER"/>
            <result column="amy_order_no" property="amyOrderNo" jdbcType="VARCHAR"/>
            <result column="buy_money" property="buyMoney" jdbcType="INTEGER"/>
            <result column="profit" property="profit" jdbcType="INTEGER"/>
            <result column="refund" property="refund" jdbcType="INTEGER"/>
            <result column="remark" property="remark" jdbcType="VARCHAR"/>
            <result column="order_date" property="orderDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="table">sell_log</sql>
    <sql id="Base_Column_List">
            `id`,
            `product`,
            `buyer_name`,
            `my_order_no`,
            `sell_money`,
            `amy_order_no`,
            `buy_money`,
            `profit`,
            `refund`,
            `remark`,
            `order_date`
    </sql>
    <sql id="Base_Where_Clause">
        <where>
            <trim prefixOverrides="and">
                    <if test="id != null">
                        AND `id`=#{id}
                    </if>
                    <if test="product != null and product != ''">
                        AND `product`=#{product}
                    </if>
                    <if test="buyerName != null and buyerName != ''">
                        AND `buyer_name`=#{buyerName}
                    </if>
                    <if test="myOrderNo != null and myOrderNo != ''">
                        AND `my_order_no`=#{myOrderNo}
                    </if>
                    <if test="sellMoney != null">
                        AND `sell_money`=#{sellMoney}
                    </if>
                    <if test="amyOrderNo != null and amyOrderNo != ''">
                        AND `amy_order_no`=#{amyOrderNo}
                    </if>
                    <if test="buyMoney != null">
                        AND `buy_money`=#{buyMoney}
                    </if>
                    <if test="profit != null">
                        AND `profit`=#{profit}
                    </if>
                    <if test="refund != null">
                        AND `refund`=#{refund}
                    </if>
                    <if test="remark != null and remark != ''">
                        AND `remark`=#{remark}
                    </if>
                    <if test="orderDate != null">
                        AND `order_date`=#{orderDate}
                    </if>
            </trim>
        </where>
        <if test="offset == null and limit != null">
            limit #{limit}
        </if>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </sql>

    <!-- 查询总数 -->
    <select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
        SELECT count(id)
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 查询 -->
    <select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        <include refid="Base_Where_Clause"/>
    </select>

    <insert id="insert" parameterType="com.wusi.reimbursement.entity.SellLog" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO
        <include refid="table"/>
        (
            `id`,
            `product`,
            `buyer_name`,
            `my_order_no`,
            `sell_money`,
            `amy_order_no`,
            `buy_money`,
            `profit`,
            `refund`,
            `remark`,
            `order_date`
        )
        VALUES(
            #{id},
            #{product},
            #{buyerName},
            #{myOrderNo},
            #{sellMoney},
            #{amyOrderNo},
            #{buyMoney},
            #{profit},
            #{refund},
            #{remark},
            #{orderDate}
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table"/>
        (
            `id`,
            `product`,
            `buyer_name`,
            `my_order_no`,
            `sell_money`,
            `amy_order_no`,
            `buy_money`,
            `profit`,
            `refund`,
            `remark`,
            `order_date`
        )
        VALUES
        <foreach collection="list" item="cm" index="index" separator=",">
            (
            #{cm.id},
            #{cm.product},
            #{cm.buyerName},
            #{cm.myOrderNo},
            #{cm.sellMoney},
            #{cm.amyOrderNo},
            #{cm.buyMoney},
            #{cm.profit},
            #{cm.refund},
            #{cm.remark},
            #{cm.orderDate}
            )
        </foreach>
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        <include refid="table"/>
        WHERE id=#{id}
    </select>

    <update id="updateById" parameterType="com.wusi.reimbursement.entity.SellLog">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="product != null and product != ''">
                 `product`=#{product},
            </if>
            <if test="buyerName != null and buyerName != ''">
                 `buyer_name`=#{buyerName},
            </if>
            <if test="myOrderNo != null and myOrderNo != ''">
                 `my_order_no`=#{myOrderNo},
            </if>
            <if test="sellMoney != null">
                 `sell_money`=#{sellMoney},
            </if>
            <if test="amyOrderNo != null and amyOrderNo != ''">
                 `amy_order_no`=#{amyOrderNo},
            </if>
            <if test="buyMoney != null">
                 `buy_money`=#{buyMoney},
            </if>
            <if test="profit != null">
                 `profit`=#{profit},
            </if>
            <if test="refund != null">
                 `refund`=#{refund},
            </if>
            <if test="remark != null and remark != ''">
                 `remark`=#{remark},
            </if>
            <if test="orderDate != null">
                 `order_date`=#{orderDate},
            </if>
        </set>
        WHERE id=#{id}
    </update>
</mapper>